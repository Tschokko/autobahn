# Defines the Google C++ style for automatic reformatting.
# http://clang.llvm.org/docs/ClangFormatStyleOptions.html
BasedOnStyle: Google
Language: Cpp
Standard: Cpp11
MaxEmptyLinesToKeep: 2
UseTab: false
IndentWidth: 2
ColumnLimit: 100
# BreakBeforeBraces: Stroustrup
# SpacesBeforeTrailingComments: 2